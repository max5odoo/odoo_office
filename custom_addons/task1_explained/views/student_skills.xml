    <record id="student_skill_type_action" model="ir.actions.act_window">
        <field name="name">Skill Types</field>
        <field name="res_model">student.skill.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="submenu_student_skill"
            name="Skills"
            parent="task1_explained.school_student_menu"
            action="student_skill_type_action"
            sequence="100"
            />

    <menuitem
            id="submenu_student_skill"
            name="Skills"
            parent="task1_explained.school_student_menu"
            action="student_skill_type_action"
            sequence="100"
            />


    <!-- Skills -->

    <record id="student_skill_level_view_tree" model="ir.ui.view">
        <field name="name">student.skill.level.tree</field>
        <field name="model">student.skill.level</field>
        <field name="arch" type="xml">
            <tree string="Skill Levels">
                <field name="name"/>
                <field name="level_progress" widget="progressbar"/>
            </tree>
        </field>
    </record>

    <record id="details_skill_view_tree" model="ir.ui.view">
        <field name="name">student.skill.tree</field>
        <field name="model">skill.skill</field>
        <field name="arch" type="xml">
            <tree string="Skill Levels">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="details_skill_level_view_form" model="ir.ui.view">
        <field name="name">student.skill.level.form</field>
        <field name="model">student.skill.level</field>
        <field name="arch" type="xml">
            <form string="Skill Level">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="level_progress" string="Progress (%)"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="details_skill_view_form" model="ir.ui.view">
        <field name="name">student.details.skill.form</field>
        <field name="model">student.skill</field>
        <field name="arch" type="xml">
            <form string="Skills">
                <sheet>
                    <group>
                        <group>
                            <field name="skill_type_id"/>
                            <field
                                name="skill_id"
                                domain="[('skill_type_id', '=', skill_type_id)]"
                                options="{'no_create_edit':True}"/>
                        </group>
                        <group>
                            <field name="skill_level_id" domain="[('skill_type_id', '=', skill_type_id)]"/>
                            <field name="level_progress" widget="progressbar"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="student_skill_view_form" model="ir.ui.view">
        <field name="name">student.skill.form</field>
        <field name="model">skill.skill</field>
        <field name="arch" type="xml">
            <form string="Skills">
                <sheet>
                    <field name="name"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="student_skill_type_view_tree" model="ir.ui.view">
        <field name="name">student.skill.type.tree</field>
        <field name="model">student.skill.type</field>
        <field name="arch" type="xml">
            <tree string="Skill Types">
                <field name="name"/>
                <field name="skill_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="student_details_skill_type_view_form" model="ir.ui.view">
        <field name="name">student.skill.type.form</field>
        <field name="model">student.skill.type</field>
        <field name="arch" type="xml">
            <form string="Skill Type">
                <field name="id" invisible="1"/>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Skill Type" required="True"/>
                        </h1>
                    </div>
                    <group string="Skills">
                        <field name="skill_ids" nolabel="1" context="{'default_skill_type_id': id}">
                            <tree editable="bottom">
                                <field name="name"/>
                            </tree>
                        </field>
                    </group>
                    <group string="Levels">
                        <field name="skill_level_ids" nolabel="1" context="{'default_skill_type_id': id}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>



</odoo>
